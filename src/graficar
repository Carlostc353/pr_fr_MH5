#!/usr/bin/env python3

import numpy as np
import matplotlib.pyplot as plt

# Load data from text files
desired_output = np.loadtxt('/tmp/xdesired.txt')
current_output = np.loadtxt('/tmp/xcurrent.txt')

# Generate time vector assuming one row per time step
time = range(desired_output.shape[0])

# Plotting
plt.figure(figsize=(12, 8))

# Plot desired output
plt.plot(desired_output[:, 0], desired_output[:, 1], label='Desired x', linestyle='--')
plt.plot(desired_output[:, 0], desired_output[:, 2], label='Desired y', linestyle='--')
plt.plot(desired_output[:, 0], desired_output[:, 3], label='Desired z', linestyle='--')

# Plot current output
plt.plot(current_output[:, 0], current_output[:, 1], label='Current x')
plt.plot(current_output[:, 0], current_output[:, 2], label='Current y')
plt.plot(current_output[:, 0], current_output[:, 3], label='Current z')

plt.xlabel('Tiempo')
plt.ylabel('Posicion')
plt.title('Posicion vs Tiempo')
plt.legend()
plt.grid(True)

plt.show()

